<div align=center>

<h1>Create a new Album!</h1>
<br>

<form action="<%= albums_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

	<label for="album_name">Album Name</label>
  <input name="album[album_name]" id="album_name" type="text" >
   
	<br>

  <label for="band_id">Band Name</label>
  <select name="album[band_id]" id="band_id">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"><%= band.band_name %></option>
    <% end %>
  </select>

  <br>
  
  <br>

	<label>Recording Type:</label>
  <input type="radio" name="album[recording_type]" value="Live">
  <label for="Live">Live</label>

  <input type="radio" name="album[recording_type]" value="Studio">
  <label for="Studio">Studio</label>


  <br>

  <input type="submit" value="Create a new Album!">
</form>

</div>