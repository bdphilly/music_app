<div align=center>

<h1>Edit the Album!</h1>
<br>

<form action="<%= album_url(@album) %>" method="post">
	<input type="hidden" name="_method" value="patch">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

	<label for="album_name">Album Name</label>
  <input name="album[album_name]" id="album_name" 
  	type="text" value="<%= @album.album_name %>" >
   
	<br>


	<label for="band_id">Band Name</label>
  <select name="album[band_id]" id="band_id">
    <% @bands.each do |band| %>
    	<option value="<%= band.id %>" <%= 'selected' if @album.band_id == band.id %>>
        <%= band.band_name %></option>
  	<% end %>
  </select>
	
	<br>
	<br>

	<label>Recording Type:</label>
  <input type="radio" name="album[recording_type]" 
  	value="Live" <%= 'checked' if @album.recording_type == 'Live' %>>
  <label for="Live">Live</label>

  <input type="radio" name="album[recording_type]" 
    value="Studio" <%= 'checked' if @album.recording_type == 'Studio' %>>
  <label for="Studio">Studio</label>

  <br>

  <input type="submit" value="Edit that album!">
</form>

</div>